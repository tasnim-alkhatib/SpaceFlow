@model IEnumerable<SpaceFlow.Web.ViewModels.RoomViewModel>

@{
    ViewData["Title"] = "Our Workspaces";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 border-bottom pb-3">Find Your Perfect Spot</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var room in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 transition-hover">
                    <img src="~/images/rooms/@room.ImageUrl" loading="lazy" class="card-img-top" alt="@room.Name" style="height: 200px; object-fit: cover;">

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title mb-0">@room.Name</h5>
                            <span class="badge bg-success">@room.PricePerHour EGP/hr</span>
                        </div>
                        @* <p class="card-text text-muted small">@room.Description</p> *@
                    </div>

                    <div class="card-footer border-0 d-grid pb-3">
                        <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.id" class="btn btn-outline-dark py-2 rounded-pill">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .transition-hover:hover {
        transform: translateY(-5px);
        transition: 0.3s ease;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}