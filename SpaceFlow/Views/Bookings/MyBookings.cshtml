@using SpaceFlow.Core.Enums
@model IEnumerable<SpaceFlow.Core.Entities.Booking>

@{
    ViewData["Title"] = "My Dashboard";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-dark">My Bookings</h2>
            <p class="text-muted">Manage and track your reserved workspaces.</p>
        </div>
        <a asp-area="" asp-controller="Home" asp-action="BrowseSpaces" class="btn btn-outline-light rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>New Booking
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-white rounded-5 shadow-sm border">
            <i class="bi bi-calendar-x display-1 text-light mb-3"></i>
            <h4 class="text-muted">No bookings found yet.</h4>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-4 py-3 text-center">Space</th>
                            <th class="py-3">Date & Time</th>
                            <th class="py-3 text-center">Duration</th>
                            <th class="py-3 text-center">Total Price</th>
                            <th class="py-3 text-center">Status</th>
                            <th class="pe-4 py-3 text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody class="table-light">
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="ms-3">
                                            <h6 class="fw-bold mb-0">@booking.Room.Name</h6>
                                            <small class="text-muted">ID: #@booking.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="small fw-semibold">@booking.StartTime.ToString("MMM dd, yyyy")</div>
                                    <div class="small text-muted">@booking.StartTime.ToString("hh:mm tt") - @booking.EndTime.ToString("hh:mm tt")</div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark border">
                                        @((booking.EndTime - booking.StartTime).TotalHours.ToString("0.0")) hrs
                                    </span>
                                </td>
                                <td class="text-center fw-bold text-primary">
                                    @booking.TotalPrice LE
                                </td>
                                <td class="text-center">
                                    <span class="badge @booking.Status.GetBadgeClass()">@booking.Status</span>
                                </td>
                                <td class="pe-4 text-center">
                                    <a asp-area="" asp-controller="Rooms" asp-action="Details" asp-route-id="@booking.RoomId" class="btn btn-sm btn-outline-secondary rounded-pill shadow-sm">View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .bg-success-soft { background-color: rgba(25, 135, 84, 0.1); }
    .table thead th { font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px; border: none; }
    .table tbody td { border-bottom: 1px solid #f8f9fa; padding: 1rem 0.5rem; }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}