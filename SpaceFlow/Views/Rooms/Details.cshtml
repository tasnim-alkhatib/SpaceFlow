@model SpaceFlow.Core.Dtos.RoomDto
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<div class="container py-5">
    <div class="mb-4">
        <h3 class="fw-bold text-dark mb-1">@Model.Name</h3>
        <div class="text-muted"><i class="bi bi-geo-alt-fill me-1"></i> Premium Business District</div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="p-5 bg-white rounded-4 shadow-sm border border-light">
                <h4 class="fw-bold text-dark mb-4 border-bottom pb-3">About this workspace</h4>
                <p class="fw-bold mb-4 border-bottom pb-3 fs-4" style="max-width: 900px;">
                    @Model.Description
                </p>

                <div class="row mt-5 g-4">
                    <div class="col-md-3">
                        <div class="text-center p-3 border rounded-4">
                            <i class="bi bi-people fs-2 text-primary"></i>
                            <h6 class="mt-2 fw-bold">@Model.Capacity Guests</h6>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center p-3 border rounded-4">
                            <i class="bi bi-wifi fs-2 text-primary"></i>
                            <h6 class="mt-2 fw-bold">Free High Speed WiFi</h6>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center p-3 border rounded-4">
                            <i class="bi bi-cup-hot fs-2 text-primary"></i>
                            <h6 class="mt-2 fw-bold">Coffee Bar Access</h6>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center p-3 border rounded-4">
                            <i class="bi bi-clock fs-2 text-primary"></i>
                            <h6 class="mt-2 fw-bold">Instant Confirmation</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4 px-2">
            
            @if (SignInManager.IsSignedIn(User))
            {
                @if (User.IsInRole("Admin"))
                {
                    <a asp-area="Admin" asp-controller="Rooms" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i> Previous
                    </a>
                }
                else
                {
                    <a asp-area="" asp-controller="Home" asp-action="BrowseSpaces" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i> Previous
                    </a>
                    <a asp-area="" asp-controller="Bookings" asp-action="Create" asp-route-spaceId="@Model.Id" class="btn btn-outline-primary rounded-pill px-5 shadow">
                        Book This Space <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                }
            }
            else
            {
                <a asp-area="" asp-controller="Home" asp-action="BrowseSpaces" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i> Previous
                </a>
            }

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}