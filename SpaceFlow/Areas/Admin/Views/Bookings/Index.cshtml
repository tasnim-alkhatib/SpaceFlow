@using SpaceFlow.Core.Enums
@model IEnumerable<SpaceFlow.Web.Areas.Admin.Models.AdminBookingViewModel>

@{
    ViewData["Title"] = "Manage Bookings";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">System Bookings</h2>
        <span class="btn btn-outline-dark btn-sm rounded-pill px-4 fw-bold">Total: @Model.Count()</span>
    </div>

    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4 py-3">User</th>
                        <th class="py-3">Room</th>
                        <th class="py-3 text-center">Duration</th>
                        <th class="py-3 text-center">Total Price</th>
                        <th class="py-3 text-center">Status</th>
                        <th class="pe-4 py-3 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-light">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex flex-column">
                                    <span class="fw-semibold text-dark">@item.UserEmail</span>
                                    <small class="text-muted" style="font-size: 0.7rem;">ID: #@item.Id</small>
                                </div>
                            </td>
                            <td>
                                <h6 class="fw-bold mb-0">@item.RoomName</h6>
                            </td>
                            <td class="text-center">
                                <div class="small fw-semibold">@item.StartTime.ToString("MMM dd, HH:mm")</div>
                                <div class="small text-muted">to @item.EndTime.ToString("HH:mm")</div>
                            </td>
                            <td class="text-center fw-bold text-primary">@item.TotalPrice.ToString("N2") LE</td>

                            <td class="text-center" id="status-container-@item.Id">
                                <span class="badge @item.Status.GetBadgeClass()">@item.Status</span>
                            </td>

                            <td class="pe-4 text-end">
                                <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                    <button class="btn btn-sm btn-success"
                                            title="Confirm Booking"
                                            hx-post="/Admin/Bookings/UpdateStatus?id=@item.Id&status=@BookingStatus.Confirmed"
                                            hx-target="#status-container-@item.Id">
                                        <i class="bi bi-check-lg"></i>
                                    </button>

                                    <button class="btn btn-sm btn-danger"
                                            title="Cancel Booking"
                                            hx-post="/Admin/Bookings/UpdateStatus?id=@item.Id&status=@BookingStatus.Cancelled"
                                            hx-target="#status-container-@item.Id">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

