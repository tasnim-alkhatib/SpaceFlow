@model IEnumerable<SpaceFlow.Core.Dtos.RoomDto>

@{
    ViewData["Title"] = "Manage Rooms";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">All Rooms</h2>
        <a asp-area="Admin" asp-controller="Rooms" asp-action="Create" class="btn btn-outline-light rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-lg me-2"></i>New Room
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-white rounded-5 shadow-sm border">
            <i class="bi bi-calendar-x display-1 text-light mb-3"></i>
            <h4 class="text-muted">No Rooms found yet.</h4>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-4 py-3 text-center">Image</th>
                            <th class="py-3 text-center">Name</th>
                            <th class="py-3 text-center">Price/Hour</th>
                            <th class="py-3 text-center">Capacity</th>
                            <th class="pe-4 py-3 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-light">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"><img src="/images/rooms/@item.ImageUrl" class="rounded" style="width: 60px; height: 40px; object-fit: cover;" /></td>
                                <td class="text-center">@item.Name</td>
                                <td class="text-center fw-bold text-primary">@item.PricePerHour LE</td>
                                <td class="text-center">@item.Capacity Persons</td>
                                <td class="pe-4 text-center">
                                    <a asp-action="Edit" asp-route-roomId="@item.Id" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this room?')">
                                        @Html.AntiForgeryToken() <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>

                                    <a asp-area="" asp-controller="Rooms" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                               </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
       }
</div>