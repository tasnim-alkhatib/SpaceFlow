@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    // This ensures it uses your main site layout
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                @* Optional: Top colored bar for style *@
                <div class="bg-primary" style="height: 5px;"></div>

                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="bg-light d-inline-block p-3 rounded-circle mb-3">
                            <i class="bi bi-shield-lock-fill text-primary fs-1"></i>
                        </div>
                        <h3 class="fw-bold">Welcome Back</h3>
                        <p class="text-muted small">Please enter your details</p>
                    </div>

                    <form id="account" method="post">
                        @* <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div> *@
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control border-0 bg-light" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control border-0 bg-light" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        @* <div class="form-check mb-4 small">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                Remember me
                            </label>
                        </div> *@

                        <button type="submit" class="btn btn-outline-primary w-100 py-2 fw-bold rounded-3 shadow-sm mb-3">
                            Sign In
                        </button>

                        <div class="text-center mt-3">
                            <span class="text-muted small">Don't have an account?</span>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold small text-decoration-none">Create one</a>
                        </div>
                    </form>
                </div>
            </div>

            @* Back to home link *@
            <div class="text-center mt-4">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-muted small text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>