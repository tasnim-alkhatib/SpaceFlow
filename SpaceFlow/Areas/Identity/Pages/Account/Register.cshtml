@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh; padding-top: 50px; padding-bottom: 50px;">
    <div class="row w-100 justify-content-center">
        @* خلينا العرض 5 عشان الحقول تحت بعضها *@
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                @* الشريط العلوي الأخضر *@
                <div class="bg-success" style="height: 5px;"></div>

                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="bg-light d-inline-block p-3 rounded-circle mb-3">
                            <i class="bi bi-person-plus-fill text-success fs-1"></i>
                        </div>
                        <h3 class="fw-bold">Create Account</h3>
                        <p class="text-muted small">Join SpaceFlow community today</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                        @* Email Field *@
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control border-0 bg-light" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        @* Password Field *@
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control border-0 bg-light" autocomplete="new-password" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        @* Confirm Password Field *@
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control border-0 bg-light" autocomplete="new-password" placeholder="Confirm Password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn btn-outline-primary w-100 py-2 fw-bold rounded-3 shadow-sm mb-3">
                            Register Now
                        </button>

                        <div class="text-center mt-3">
                            <span class="text-muted small">Already have an account?</span>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-success fw-bold small text-decoration-none">Login here</a>
                        </div>
                    </form>
                </div>
            </div>

            @* Back to home *@
            <div class="text-center mt-4">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-muted small text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}